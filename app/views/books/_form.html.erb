<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3>
        The following <%= pluralize(@book.errors.count, "error") %> prohibited
        this book from being saved:
      </h3>
      <ol>
        <% @book.errors.full_messages.each do |msg| %>
          <p id="error"><%= msg %></p>
        <% end %>
      </ol>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_area :author %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
